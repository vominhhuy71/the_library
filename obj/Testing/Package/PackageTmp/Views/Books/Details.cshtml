@model library.Models.Book
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Day: @Model.ReleaseDay.ToLongDateString()</li>
    <li>Day added: @Model.DayAdded.ToLongDateString()</li>
    <li>Available: @Model.NumberInStock</li>
</ul>

