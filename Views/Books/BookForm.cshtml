@model library.ViewModels.BookFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Books"))
{
    <div class="form-group">
        @Html.LabelFor(b => b.Book.Name)
        @Html.TextBoxFor(b => b.Book.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Book.ReleaseDay)
        @Html.TextBoxFor(b => b.Book.ReleaseDay, "{0:d/MM/yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Book.GenreId)
        @Html.DropDownListFor(b => b.Book.GenreId, new SelectList(Model.Genres,"Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Book.NumberInStock)
        @Html.TextBoxFor(b => b.Book.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(b => b.Book.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}
